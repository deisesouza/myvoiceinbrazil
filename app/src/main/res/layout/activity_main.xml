<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="#efefef"
    android:gravity="center"
    android:fillViewport="true">



    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1,2"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:id="@+id/logo"
                android:src="@mipmap/icone"
                android:contentDescription="@string/logomarca" />

        </LinearLayout>


        <!-- ROW1 -->
        <TableRow>


            <Button
                android:id="@+id/btn1"
                android:background="@drawable/img_01"
                android:layout_column="1" />

            <Button
                android:id="@+id/btn2"
                android:background="@drawable/img_02"
                android:layout_column="2" />

        </TableRow>

        <!-- ROW2 -->
        <TableRow>

            <Button
                android:id="@+id/btn3"
                android:background="@drawable/img_03"
                android:layout_column="1" />

            <Button
                android:id="@+id/btn4"
                android:background="@drawable/img_04"
                android:layout_column="2" />

        </TableRow>

        <!-- ROW3 -->
        <TableRow>

            <Button
                android:id="@+id/btn5"
                android:background="@drawable/img_05"
                android:layout_column="1" />

            <Button
                android:id="@+id/btn6"
                android:background="@drawable/img_06"
                android:layout_column="2" />

        </TableRow>


    </TableLayout>


</ScrollView>